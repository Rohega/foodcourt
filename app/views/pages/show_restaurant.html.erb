<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">
        <strong><%= @restaurant.name %></strong>
      </h2>
      <hr>
    </div>
    <div class="col-md-12">
      <div style="margin-left: 130px">
        <%= image_tag @restaurant.photo.url(:big) %>
      </div>
      <hr>
      <h2 class="intro-text text-center">Direccion:
        <strong><%= @restaurant.address %></strong>
      </h2>
      <hr>
      <p><%= @restaurant.description %></p>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Platillos
        <strong><%= @restaurant.name %></strong>
      </h2>
      <hr>
      <%= @restaurants %>
    </div>
  </div>
</div>