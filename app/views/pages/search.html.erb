<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Resultados de
        <strong>Busqueda</strong>
      </h2>
      <hr>
    </div>
    <% if @restaurants.empty? %>
        <div class="col-md-12 text-center">
          <h3>No se encontraron resultados.</h3>
        </div>
    <% else %>
        <% @restaurants.each do |r| %>
            <%= r %>
        <% end %>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>